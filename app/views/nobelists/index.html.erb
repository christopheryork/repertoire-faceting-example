<script language="javascript">
$().ready(function() {
  // only necessary if using sub-uris
  repertoire.defaults = { path_prefix: '<%= ::Merb::Config[:path_prefix] %>' };

  $('#nobelists').facet_context(function() {
    return { 
      search: $("#search").val()
    };
  });
  $('.facet').facet();
  $('.nested_facet').nested_facet();
  $('#results').results();
});
</script>

<a style='float:right; clear: right; margin-right:10px' href='<%= url(:action => :visualize) %>'>Visual / Extension demo</a>
<a style='float:right; clear: right; margin-right:10px' href='<%= url(:controller => :citizens) %>'>Scalability demo</a>

<form>
Search: <input id='search' name='search' type='text' value='<%= @search %>'/>
</form> 
<div id='nobelists'>
  <div class='left'>
    <div id='discipline' class='facet'></div>
    <div id='nobel_year' class='facet' title='Year Awarded'></div>
    <div id='degree' class='facet' title='Degree at MIT'></div>
  </div>
  <div id='results'></div>
  <div class='right'>
    <div id='birth_place' class='nested_facet' title='Birth Place'></div>
    <div id='birthdate' class='facet' title='Birth Decade'></div>
  </div>
</div>
